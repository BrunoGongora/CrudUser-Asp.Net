@model IEnumerable<Crud_Asp.Net.Models.Contacto>
@{
    ViewData["Title"] = "Crud";
}

<style>
    .dataTables_wrapper 
    .dataTables_length, 
    .dataTables_wrapper 
    .dataTables_filter, 
    .dataTables_wrapper 
    .dataTables_info, 
    .dataTables_wrapper 
    .dataTables_processing, 
    .dataTables_wrapper 
    .dataTables_paginate {
        margin-bottom: 2rem;
        margin-top:1rem;
        padding: 0rem 1.5rem;
    }

    .table > :not(caption) > * > *{
        border-bottom-width: 0px;
    }

    .text_head{
        color: #06528b;
    }

    .dataTables_wrapper .dataTables_filter input{
        width: 20rem;
        margin-left: 1rem;
    }

    .dataTables_wrapper .dataTables_length, .dataTables_wrapper .dataTables_filter, .dataTables_wrapper .dataTables_info, .dataTables_wrapper .dataTables_processing, .dataTables_wrapper .dataTables_paginate{
        color: #838383;
    }

    .card-header {
        background-color: #505050;
    }

</style>

<h1 class="text-center my-4">Gestion de Usuarios</h1>
<div class="row">
    <div  class="offset-9 col-3 mb-3">
        <a style="width: 15rem;" asp-action="Crear" asp-controller="Home" class="btn btn-primary  d-block mx-auto btn-lg"><i class="fas fa-solid fa-plus me-2"></i>Nuevo Usuario</a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header">
                <h3 class="text-white"> <strong>Lista de Usuarios</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0) //Este validar revisara si hay datos en la base de datos
                    {
                        <table class="table table-striped table-hover" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="text_head">@Html.DisplayNameFor(m => m.id)</th> <!--Esto es codigo razor y es para proteger la informacion-->
                                    <th class="text_head">@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th class="text_head">@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th class="text_head">@Html.DisplayNameFor(m => m.Direccion)</th>
                                    <th class="text_head">@Html.DisplayNameFor(m => m.Email)</th>
                                    <th class="text_head">@Html.DisplayNameFor(m => m.FechaRegistro)</th>
                                    <th class="text_head">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td class="cell">@Html.DisplayFor(m => item.id)</td>
                                        <td class="cell">@Html.DisplayFor(m => item.Nombre)</td>
                                        <td class="cell">@Html.DisplayFor(m => item.Telefono)</td>
                                        <td class="cell">@Html.DisplayFor(m => item.Direccion)</td>
                                        <td class="cell">@Html.DisplayFor(m => item.Email)</td>
                                        <td class="cell">@Html.DisplayFor(m => item.FechaRegistro)</td>
                                        <td class="cell">
                                            <a class="btn btn-secondary text-center" title="Editar" asp-action="Editar" asp-route-id="@item.id"><i class="fas fa-solid fa-pen text-white"></i></a>
                                            <a class="btn btn-primary text-center" title="Ver"  asp-action="Detalle" asp-route-id="@item.id"><i class="fas fa-solid fa-eye"></i></a>
                                            <a class="btn btn-danger text-center" title="Eliminar" asp-action="Eliminar" asp-route-id="@item.id"><i class="fas fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }else 
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src=""></script>
    <script>
        $(document).ready(function () {
            $("#tblUsuarios").DataTable(
            {
                    language: {
                        "decimal": "",
                        "emptyTable": "No hay información",
                        "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                        "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                        "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                        "infoPostFix": "",
                        "thousands": ",",
                        "lengthMenu": "Mostrar _MENU_ Entradas",
                        "loadingRecords": "Cargando...",
                        "processing": "Procesando...",
                        "search": "Buscar:",
                        "zeroRecords": "Sin resultados encontrados",
                        "paginate": {
                            "first": "Primero",
                            "last": "Ultimo",
                            "next": "Siguiente",
                            "previous": "Anterior"
                        }
                    }
            }
            )
         })
       
    </script>
}




